# ===========================
# Rocket Client Template â€” Environment Variables
# ===========================
# Copy this file to .env.local and fill in all values.
# See DEPLOY.md for setup instructions.

# --- Google Workspace CMS ---
# The ID of the Google Sheet used as the content database
GOOGLE_SHEETS_ID=your_google_sheet_id
# The ID of the Google Drive folder for media assets
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id
# Base64-encoded Google Service Account JSON key
GOOGLE_SERVICE_ACCOUNT_KEY=base64_encoded_service_account_json

# --- Gemini AI (Client's own key) ---
GEMINI_API_KEY=your_gemini_api_key

# --- CRO9 Analytics ---
NEXT_PUBLIC_CRO9_KEY=your_cro9_api_key
CRO9_API_URL=https://api.cro9.app

# --- CRM Integration (RocketAdd OAuth) ---
CRM_CLIENT_ID=your_crm_oauth_client_id
CRM_CLIENT_SECRET=your_crm_oauth_client_secret
CRM_REDIRECT_URI=https://yourdomain.com/api/crm/callback
NEXT_PUBLIC_CRM_TRACKING_ID=your_crm_tracking_id

# --- CRM Direct API (for Lead Intelligence + Visualizer) ---
CRM_API_KEY=your_crm_api_key
CRM_LOCATION_ID=your_crm_location_id
CRM_PIPELINE_ID=your_crm_pipeline_id
NEXT_PUBLIC_CRM_CHAT_WIDGET_ID=your_crm_chat_widget_id

# --- Site Configuration ---
NEXT_PUBLIC_SITE_NAME="Your Business Name"
NEXT_PUBLIC_SITE_PHONE="(555) 555-5555"
NEXT_PUBLIC_SITE_EMAIL=info@yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# --- Admin Auth (Google OAuth) ---
# Google Cloud Console > APIs & Services > Credentials > OAuth 2.0 Client ID
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_OAUTH_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback
# Comma-separated list of emails allowed to access /admin
ADMIN_EMAILS=admin@yourdomain.com,owner@yourdomain.com
# Session secret for cookie signing (generate with: openssl rand -hex 32)
SESSION_SECRET=generate_a_random_session_secret_here

# --- Theme Colors (Tailwind CSS values) ---
NEXT_PUBLIC_COLOR_PRIMARY="#2563eb"
NEXT_PUBLIC_COLOR_SECONDARY="#1e40af"
NEXT_PUBLIC_COLOR_ACCENT="#f59e0b"
